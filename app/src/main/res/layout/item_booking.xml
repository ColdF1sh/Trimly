<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSalonName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Barber King"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заплановано"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#388E3C" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMasterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Олег Бойко"
            android:textSize="15sp"
            android:textColor="#222"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Чоловіча стрижка"
            android:textSize="15sp"
            android:textColor="#222"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="06.06.2025"
                android:textSize="14sp"
                android:textColor="#888" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00-12:30"
                android:textSize="14sp"
                android:textColor="#888" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="СКАСУВАТИ ЗАПИС"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:backgroundTint="#D32F2F"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvExpiredMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата запису минула"
            android:textSize="14sp"
            android:textColor="#888"
            android:visibility="gone"
            android:layout_gravity="end"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 